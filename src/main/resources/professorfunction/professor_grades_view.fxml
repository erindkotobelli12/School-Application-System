<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" style="-fx-background-color: #f8f9fa;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="professorfunc.Professor_Grades_Controller">

    <top>
        <VBox>
            <HBox alignment="CENTER_LEFT" minHeight="70.0" spacing="20.0" style="-fx-background-color: #003366; -fx-padding: 0 30 0 30;">
                <children>
                    <Label style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 22px;" text="SCHOOL APP" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Button onAction="#handleBackButton" style="-fx-background-color: #5a6268; -fx-text-fill: white; -fx-cursor: hand; -fx-padding: 8 20; -fx-background-radius: 5;" text="â† Back" />
                    <Label fx:id="professorNameLabel" style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="Professor Name" />
                </children>
            </HBox>

            <HBox alignment="CENTER_LEFT" prefHeight="50.0" spacing="15.0" style="-fx-background-color: #e9ecef; -fx-padding: 0 30 0 30; -fx-border-color: #dee2e6; -fx-border-width: 0 0 1 0;">
                <children>
                    <Label style="-fx-font-weight: bold; -fx-text-fill: #495057;" text="Classroom: " />
                    <Label fx:id="lblClassroomName" style="-fx-text-fill: #0099cc; -fx-font-weight: bold;" text="Select a class" />
                    <Separator orientation="VERTICAL" prefHeight="20.0" />
                    <Label style="-fx-font-weight: bold; -fx-text-fill: #495057;" text="Course: " />
                    <Label fx:id="lblCourseName" style="-fx-text-fill: #0099cc; -fx-font-weight: bold;" text="---" />
                </children>
            </HBox>
        </VBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.25" style="-fx-background-color: transparent;">
            <items>
                <VBox spacing="10.0" style="-fx-background-color: white; -fx-padding: 20;">
                    <children>
                        <Label style="-fx-font-weight: bold; -fx-font-size: 18px; -fx-text-fill: #333;" text="My Classrooms" />
                        <ListView fx:id="classListView" VBox.vgrow="ALWAYS" style="-fx-background-radius: 5; -fx-border-color: #0099cc; -fx-border-radius: 5;" />
                    </children>
                </VBox>

                <VBox spacing="20.0" style="-fx-padding: 20; -fx-background-color: white;">
                    <children>
                        <TableView fx:id="gradesTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colStudentId" prefWidth="120.0" text="Student ID" />
                                <TableColumn fx:id="colStudentName" prefWidth="250.0" text="Student Name" />
                                <TableColumn fx:id="colMidterm" prefWidth="120.0" text="Midterm (40%)" />
                                <TableColumn fx:id="colFinal" prefWidth="120.0" text="Final (60%)" />
                                <TableColumn fx:id="colFinalGrade" prefWidth="150.0" text="Final Grade" />
                            </columns>
                        </TableView>
                        <HBox alignment="CENTER_RIGHT">
                            <Button onAction="#handleSave" style="-fx-background-color: #689f38; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 25; -fx-background-radius: 5; -fx-cursor: hand;" text="Save Changes" />
                        </HBox>
                    </children>
                </VBox>
            </items>
        </SplitPane>
    </center>
</BorderPane>