<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="750.0" prefWidth="900.0" spacing="0.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="adminfunc.adminedit.Admin_Professor_Edit">
    <children>
        <HBox alignment="CENTER_LEFT" prefHeight="60.0" spacing="20.0" style="-fx-background-color: #003366;">
            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>
            <children>
                <Label text="SCHOOL APP - ADMIN PANEL" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
                <Button onAction="#handleBack" style="-fx-background-color: #5a6268; -fx-cursor: hand;" text="â† Back" textFill="WHITE" />
                <Label text="Admin" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
            </children>
        </HBox>

        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
            <content>
                <VBox alignment="TOP_CENTER" spacing="20.0">
                    <padding>
                        <Insets bottom="30.0" left="50.0" right="50.0" top="30.0" />
                    </padding>
                    <children>
                        <Label text="Edit Professor Profile">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>

                        <HBox alignment="CENTER" spacing="10.0" style="-fx-background-color: #f4f4f4; -fx-padding: 10; -fx-background-radius: 5;">
                            <children>
                                <Label text="Search Professor ID:">
                                    <font><Font name="System Bold" size="14.0" /></font>
                                </Label>
                                <TextField fx:id="txtSearchId" prefWidth="150.0" promptText="Enter numeric ID..." />
                            </children>
                        </HBox>

                        <GridPane hgap="20.0" maxWidth="800.0" vgap="12.0">
                            <columnConstraints>
                                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" prefWidth="150.0" />
                                <ColumnConstraints hgrow="SOMETIMES" prefWidth="200.0" />
                                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" prefWidth="150.0" />
                                <ColumnConstraints hgrow="SOMETIMES" prefWidth="200.0" />
                            </columnConstraints>
                            <children>
                                <Label text="First Name:" GridPane.rowIndex="0" />
                                <TextField fx:id="txtFirstName" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                                <Label text="Last Name:" GridPane.rowIndex="1" />
                                <TextField fx:id="txtLastName" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                                <Label text="Birth Date:" GridPane.rowIndex="2" />
                                <DatePicker fx:id="dpBirthDate" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                                <Label text="Gender:" GridPane.rowIndex="3" />
                                <ComboBox fx:id="comboGender" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                                <Label text="Age:" GridPane.rowIndex="4" />
                                <TextField fx:id="txtAge" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                                <Label text="Email:" GridPane.rowIndex="5" />
                                <TextField fx:id="txtEmail" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                                <Label text="Phone:" GridPane.rowIndex="6" />
                                <TextField fx:id="txtPhone" GridPane.columnIndex="1" GridPane.rowIndex="6" />

                                <Label text="Address:" GridPane.rowIndex="7" />
                                <TextField fx:id="txtAddress" GridPane.columnIndex="1" GridPane.rowIndex="7" />

                                <Label text="Department:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                                <ComboBox fx:id="comboDepartment" prefWidth="200.0" GridPane.columnIndex="3" GridPane.rowIndex="0" />

                                <Label text="Type:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                                <ComboBox fx:id="comboType" prefWidth="200.0" GridPane.columnIndex="3" GridPane.rowIndex="1" />

                                <Label text="Title:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                                <ComboBox fx:id="comboTitle" prefWidth="200.0" GridPane.columnIndex="3" GridPane.rowIndex="2" />

                                <Label text="Experience (Years):" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                                <TextField fx:id="txtExperience" GridPane.columnIndex="3" GridPane.rowIndex="3" />

                                <Label text="Office Location:" GridPane.columnIndex="2" GridPane.rowIndex="4" />
                                <TextField fx:id="txtOffice" GridPane.columnIndex="3" GridPane.rowIndex="4" />

                                <Label text="Specialization:" GridPane.columnIndex="2" GridPane.rowIndex="5" />
                                <TextField fx:id="txtSpecialization" GridPane.columnIndex="3" GridPane.rowIndex="5" />

                                <Label text="Password:" GridPane.columnIndex="2" GridPane.rowIndex="6" />
                                <PasswordField fx:id="txtPassword" GridPane.columnIndex="3" GridPane.rowIndex="6" />

                                <Label text="Status:" GridPane.columnIndex="2" GridPane.rowIndex="7" />
                                <CheckBox fx:id="checkTenured" text="Is Tenured" GridPane.columnIndex="3" GridPane.rowIndex="7" />

                                <Label text="Monthly Salary:" GridPane.rowIndex="8" />
                                <TextField fx:id="txtSalary" promptText="e.g. 5000.00" GridPane.columnIndex="1" GridPane.rowIndex="8" />
                            </children>
                            <rowConstraints>
                                <RowConstraints />
                                <RowConstraints />
                                <RowConstraints />
                                <RowConstraints />
                                <RowConstraints />
                                <RowConstraints />
                                <RowConstraints />
                                <RowConstraints />
                            </rowConstraints>
                        </GridPane>

                        <Button onAction="#handleUpdateProfessor" prefHeight="40.0" prefWidth="220.0" style="-fx-background-color: #003366; -fx-cursor: hand;" text="Update Professor" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Button>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</VBox>